<table class = "table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <% @users.each do |user| %>
  <tr>
    <td><%= link_to user.id, user_path(user) %></td>
    <td><%= user.name %></td>
    <td><%= link_to "Edit User", edit_user_path(user) %></td>
    <td><%= link_to "Delete User", user, method: :delete, data: { confirm: "Are you sure you want to delete this user?"} %></td>
  </tr>
  <% end %>
</table>
