<h1><%= @user.name %> Posts <h1>

<% @posts.each do |post| %>
  <h2><%= link_to post.title, user_post_path(@user, post) %></h2>
  <p><%= post.body %></p>
  <td><%= link_to "Edit", edit_user_post_path(@user, post) %></td>
  <td><%= link_to "Delete", [@user, post], method: :delete, data: { confirm: "Are you sure you want to delete this post?"} %></td>
<% end %>